{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center">Contactez-nous</h1>
    
    <!-- Affichage des messages de succès si le formulaire est envoyé -->
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}

    <!-- Formulaire de contact -->
    <div class="card mb-4">
        <div class="card-body">
            <h2 class="card-title">Nous Contacter</h2>
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_row(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Votre Nom'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Votre Email'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.message, {'attr': {'class': 'form-control', 'placeholder': 'Votre Message', 'rows': 4}}) }}
                </div>
                <div>
                    {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>
            {{ form_end(form) }}
        </div>
    </div>

    <!-- Informations pratiques -->
    <div class="mb-4">
        <h2>Informations Pratiques</h2>
        <div class="card">
            <div class="card-body">
                <p>
                    <strong>Adresse :</strong> 123 Rue des Jeux, 75000 Paris,<br>
                    <strong>Téléphone :</strong> <a href="tel:+33123456789">+33 1 23 45 67 89</a><br>
                    <strong>Horaires :</strong> Lundi - Vendredi: 9h - 18h
                </p>
            </div>
        </div>
    </div>

    <!-- Carte Interactive Google Maps -->
    <h2>Nous Trouver</h2>
    <div class="mb-4">
        <iframe 
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2624.5691900768053!2d2.352221315674007!3d48.85661407928795!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e66fdfc9c6e5bd%3A0x7d30e21ee2e07316!2sTour%20Eiffel!5e0!3m2!1sfr!2sfr!4v1610495540790!5m2!1sfr!2sfr" 
            width="100%" 
            height="450" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy"></iframe>
    </div>
</div>
{% endblock %}